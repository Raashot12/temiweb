{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/state/*": [
        "state/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/theme/*": [
        "theme/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/layouts/*": [
        "layouts/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress.config.ts",
    "cypress",
    "**/*.cy.tsx",
    "**/*.cy.ts"
  ]
}
